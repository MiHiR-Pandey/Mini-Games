import random

# Random choice for computer
computer = random.choice([1, 0, -1])

# Dictionaries (keys in lowercase)
string_to_number = {"snake": 1, "water": 0, "gun": -1}
number_to_string = {1: "Snake", 0: "Water", -1: "Gun"}

# Input from user
player_input = input("Enter your choice: ").lower()

# Check and convert input
if player_input in string_to_number:
    new = string_to_number[player_input]
else:
    print("Invalid Input!")
    exit()

# Display choices
print(f"You chose {number_to_string[new]}")
print(f"Computer chose {number_to_string[computer]}")

# Game logic
if new == computer:
    print("Match Draw!")
elif (new == 1 and computer == 0) or \
     (new == 0 and computer == -1) or \
     (new == -1 and computer == 1):
    print("You Win")
else:
    print("You Lose")
